# API Keys
PEXELS_API_KEY=  # For video backgrounds from Pexels
PIXABAY_API_KEY= # Alternative video source
DAHOPEVI_API_KEY= # For TTS service
DAHOPEVI_BASE_URL=http://dahopevi:8080 # URL for TTS service (use http://dahopevi:8080 for Docker, https://api.dahopevi.com for external)

# OpenAI Edge TTS Configuration
OPENAI_EDGE_TTS_URL=https://tts.dahopevi.com:5050 # URL for OpenAI Edge TTS service
OPENAI_EDGE_TTS_API_KEY= # API key for OpenAI Edge TTS service (optional)
OPENAI_API_KEY= # Alternative OpenAI API key (optional)

# Application Configuration
PORT=3123
NODE_ENV=production
DEV=false

# Performance Settings
CONCURRENCY=2 # Number of concurrent video generations
VIDEO_CACHE_SIZE_IN_BYTES=2097152000 # 2GB cache size

# Logging
LOG_LEVEL=info # trace, debug, info, warn, error, fatal, silent

# Whisper Configuration
WHISPER_VERBOSE=false
WHISPER_MODEL=base.en

# Data Storage
DATA_DIR_PATH=/app/data # Path for storing generated files
